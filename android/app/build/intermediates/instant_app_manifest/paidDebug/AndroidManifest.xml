<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.artificialworlds.rabbitescape"
    android:installLocation="preferExternal"
    android:targetSandboxVersion="2"
    android:versionCode="131"
    android:versionName="0.13.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="26" />

    <supports-screens
        android:largeScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="rabbitescape.ui.android.AndroidMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="rabbitescape.ui.android.AndroidAboutActivity"
            android:label="@string/title_activity_android_about" >
        </activity>
        <activity
            android:name="rabbitescape.ui.android.AndroidGameActivity"
            android:label="@string/title_activity_android_game" >
        </activity>

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>